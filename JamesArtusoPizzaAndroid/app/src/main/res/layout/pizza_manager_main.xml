<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <ImageView
        android:id="@+id/storeOrderView"
        android:layout_width="207dp"
        android:layout_height="365dp"
        android:layout_centerInParent="true"
        android:src="@drawable/store"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:contentDescription="@string/storeImageDescription"/>

    <ImageView
        android:id="@+id/currentOrderView"
        android:layout_width="207dp"
        android:layout_height="365dp"
        android:layout_centerInParent="true"
        android:src="@drawable/shopping_cart"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        android:contentDescription="@string/currentImageDescription"/>

    <ImageView
        android:id="@+id/chicagoImageView"
        android:layout_width="205dp"
        android:layout_height="365dp"
        android:layout_centerInParent="true"
        android:src="@drawable/chicago"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:contentDescription="@string/ChicagoImageDescription"/>

    <ImageView
        android:id="@+id/nyImageView"
        android:layout_width="205dp"
        android:layout_height="365dp"
        android:layout_centerInParent="true"
        android:src="@drawable/ny"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:contentDescription="@string/NYImageDescription"/>



</androidx.constraintlayout.widget.ConstraintLayout>